{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "exclude": [
    "**/node_modules/**/*",
    "**/build/**/*",
    "**/*.cy.*",
    "./cypress/**/*"
  ],
  "include": [
    "packages/**/*",
    "playground/tests/**/*"
  ]
}
